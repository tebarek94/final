              "raw": "{\n  \"title\": \"Grilled Chicken Salad\",\n  \"description\": \"A healthy and delicious grilled chicken salad\",\n  \"ingredients\": [\n    {\n      \"name\": \"Chicken breast\",\n      \"amount\": 200,\n      \"unit\": \"g\"\n    },\n    {\n      \"name\": \"Mixed greens\",\n      \"amount\": 100,\n      \"unit\": \"g\"\n    }\n  ],\n  \"instructions\": [\n    \"Season chicken with salt and pepper\",\n    \"Grill chicken for 6-8 minutes per side\",\n    \"Mix greens and serve with grilled chicken\"\n  ],\n  \"cooking_time\": 20,\n  \"servings\": 2,\n  \"difficulty\": \"easy\",\n  \"cuisine_type\": \"Mediterranean\",\n  \"tags\": [\"healthy\", \"protein\", \"salad\"]\n}"
